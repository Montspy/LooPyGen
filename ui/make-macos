ICON_PATH="../css/images/favicon/favicon.ico:files"

rm -rf dist/loopygen_companion-macOS.app dist/loopygen_companion-macOS dist/*.txt
pyinstaller --onefile --strip --clean --windowed --name loopygen_companion-macOS \
    --add-data="$ICON_PATH" --icon ../css/images/favicon/android-chrome-192x192.png \
    main.py && open ./dist/loopygen_companion-macOS.app